<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Rectangle?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.miniminds.HomeController"
      alignment="CENTER"
      spacing="20"
      prefWidth="1280"
      prefHeight="720"
      style="-fx-background-color: #007A3D;">

  <!-- App Title -->
<!--  <Text text="MiniMinds" fill="white">-->
<!--    <font>-->
<!--      <Font size="48" />-->
<!--    </font>-->
<!--  </Text>-->
  <ImageView fx:id="logoImage" fitWidth="400" fitHeight="400" preserveRatio="true">
    <image>
      <Image url="@images/minimindsLogo.png"/>
    </image>
    <clip>
      <Rectangle width="400" height="400" arcWidth="50" arcHeight="50"/>
    </clip>
  </ImageView>



  <!-- Login Button -->
  <Button fx:id="loginButton"
          text="Login"
          prefWidth="400"
          prefHeight="80"
          onAction="#handleLogin"
          styleClass="button-orange" />

  <!-- Signup Button -->
  <Button fx:id="signupButton"
          text="Signup"
          prefWidth="400"
          prefHeight="80"
          onAction="#handleSignup"
          styleClass="button-orange" />

</VBox>
