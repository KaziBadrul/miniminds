<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.miniminds.HomeController"
      alignment="CENTER"
      spacing="20"
      prefWidth="1280"
      prefHeight="720"
      style="-fx-background-color: #007A3D;">

  <!-- App Title -->
  <Text text="MiniMinds" fill="white">
    <font>
      <Font size="48" />
    </font>
  </Text>

  <!-- Login Button -->
  <Button fx:id="loginButton"
          text="Login"
          prefWidth="200"
          prefHeight="40"
          onAction="#handleLogin"
          style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 20;" />

  <!-- Signup Button -->
  <Button fx:id="signupButton"
          text="Signup"
          prefWidth="200"
          prefHeight="40"
          onAction="#handleSignup"
          style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 20;" />

</VBox>
