<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.miniminds.MathQuizController"
      alignment="CENTER" spacing="20"
      style="-fx-padding: 40; -fx-background-color: #f8f9fa;">

    <!-- Question -->
    <Text fx:id="questionText" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Answer Buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="answerBtn1" onAction="#handleAnswer" prefWidth="100"/>
        <Button fx:id="answerBtn2" onAction="#handleAnswer" prefWidth="100"/>
        <Button fx:id="answerBtn3" onAction="#handleAnswer" prefWidth="100"/>
    </HBox>

    <!-- Feedback -->
    <Text fx:id="feedbackText" style="-fx-font-size: 18px; -fx-fill: green;"/>

</VBox>
