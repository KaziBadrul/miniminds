<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.miniminds.LoginController"
      alignment="CENTER"
      spacing="20"
      prefWidth="1280"
      prefHeight="720"
      style="-fx-background-color: #28a745;">

    <Text text="Login Page" style="-fx-font-size: 32px;" />
    <TextField fx:id="emailField" promptText="Email" prefWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300"/>

    <Button text="Login" onAction="#handleLogin" prefWidth="150"/>

    <Button text="Back"
            onAction="#handleBack"
            prefWidth="150"
            style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20;" />

</VBox>
