<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="580.0" prefWidth="944.0" spacing="20" style="-fx-background-color: #3bed64;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.miniminds.LoginController">
   <ImageView fitHeight="146.0" fitWidth="359.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@images/minimindsLogoTrans.png" />
      </image>
   </ImageView>
    <TextField fx:id="emailField" maxWidth="600.0" promptText="Email" style="-fx-background-radius: 50; -fx-background-color: darkblue; -fx-text-fill: white; -fx-padding: 15; -fx-font-size: 20px;">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin></TextField>
    <PasswordField fx:id="passwordField" maxWidth="600.0" promptText="Password" style="-fx-background-radius: 50; -fx-background-color: darkblue; -fx-padding: 15; -fx-text-fill: white; -fx-font-size: 20px;">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin></PasswordField>

    <Button maxWidth="150" onAction="#handleLogin" prefHeight="58.0" prefWidth="125.0" style="-fx-background-color: #4c008a; -fx-text-fill: white; -fx-font-size: 20px; -fx-background-radius: 20; -fx-font-weight: bold;" text="LOGIN" />

    <Button maxWidth="150" onAction="#handleBack" style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20;" text="Back to Menu" />

</VBox>
