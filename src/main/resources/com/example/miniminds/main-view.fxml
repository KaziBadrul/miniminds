<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="720" prefWidth="1280" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.miniminds.MainController">

    <!-- Top Section (Header) -->
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #3bed64; -fx-padding: 0;">
         <ImageView fitHeight="112.0" fitWidth="290.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@images/minimindsLogoTrans.png" />
            </image>
         </ImageView>
        </HBox>
    </top>

    <!-- Left Navigation Sidebar -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #28a745; -fx-padding: 20;">
            <Button onAction="#showDashboard" style="-fx-pref-width: 240px; -fx-text-fill: white; -fx-font-size: 20px; -fx-background-color: #FFA500; -fx-background-radius: 20; -fx-font-weight: bold;" text="Dashboard" />
            <Button onAction="#showProfile" style="-fx-pref-width: 240px; -fx-text-fill: white; -fx-font-size: 20px; -fx-background-color: #FFA500; -fx-background-radius: 20; -fx-font-weight: bold;" text="Profile" />
            <Button onAction="#showSettings" style="-fx-pref-width: 240px; -fx-text-fill: white; -fx-font-size: 20px; -fx-background-color: #FFA500; -fx-background-radius: 20; -fx-font-weight: bold;" text="Settings" />
            <Button onAction="#showPomodoro" style="-fx-pref-width: 240px; -fx-text-fill: white; -fx-font-size: 20px; -fx-background-color: #FFA500; -fx-background-radius: 20; -fx-font-weight: bold;" text="Pomodoro" />
         <ImageView fx:id="menuImage" fitHeight="252.0" fitWidth="237.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@images/rocket1.png" />
            </image>
         </ImageView>
            <Button onAction="#handleLogout" style="-fx-pref-width: 240px; -fx-text-fill: white; -fx-font-size: 20px; -fx-background-color: #FFA500; -fx-background-radius: 20; -fx-font-weight: bold;" text="Logout" />
        </VBox>
    </left>

    <!-- Center Content Area -->
    <center>
        <VBox fx:id="contentArea" alignment="CENTER" spacing="20">
         <ImageView fitHeight="290.0" fitWidth="205.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@images/kidBlinking.gif" />
            </image>
         </ImageView>
            <Text style="-fx-font-size: 20px;" text="Select an option from the menu" />
        </VBox>
    </center>

</BorderPane>
